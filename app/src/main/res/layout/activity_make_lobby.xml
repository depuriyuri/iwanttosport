<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/sportet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sport:" />

        <EditText
            android:id="@+id/sport"
            android:layout_width="224dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/moeilijkheidsgraadet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moeilijkheidsgraad:" />

        <RadioGroup
            android:id="@+id/moeilijkheidradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:checkedButton="@+id/radio_recreatie">

            <RadioButton
                android:id="@+id/radio_beginner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beginner"
                android:checked="false" />

            <RadioButton
                android:id="@+id/radio_recreatie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recreatie" />

            <RadioButton
                android:id="@+id/radio_gevorderd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gevorderd" />
        </RadioGroup>

        <TextView
            android:id="@+id/locatieet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locatie:" />

        <EditText
            android:id="@+id/locatie"
            android:layout_width="224dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tijdet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tijd:" />

        <EditText
            android:id="@+id/tijd"
            android:layout_width="224dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aantal personen:" />

        <EditText
            android:id="@+id/aantal_personen"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:id="@+id/opmerkingenet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opmerkingen:" />

        <EditText
            android:id="@+id/opmerkingen"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/createlobby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Maak aan" />

    </LinearLayout>
</ScrollView>